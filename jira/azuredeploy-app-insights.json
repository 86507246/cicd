{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "westeurope"
        },
        "workspaceName": {
            "type": "string"
        },
        "dbType": {
            "type": "string",
            "allowedValues": [
                "sqlserver",
                "postgres",
                "mysql"
            ],
            "defaultValue": "sqlserver",
            "metadata": {
                "description": "Database type"
            }
        }
    },
    "variables": {
        "namespace": "jira",
        "appinsights": {
            "name": "[concat(variables('namespace'), '-AppInsights-', uniqueString(resourceGroup().id))]",
            "type": "java"
        },
        "solutionTypes": "AzureSQLAnalytics",
        "sqlanalytics": {
            "name": "[concat(variables('solutionTypes'), '(', parameters('workspaceName'), ')')]"
        },
        "gtwySolutionTypes": "AzureAppGatewayAnalytics",
        "gtwyanalytics": {
            "name": "[concat(variables('gtwySolutionTypes'), '(', parameters('workspaceName'), ')')]"
        }
    },
    "resources": [
        {
            "name": "[variables('appinsights').name]",
            "type": "Microsoft.Insights/components",
            "location": "[parameters('location')]",
            "apiVersion": "2014-04-01",
            "properties": {
                "ApplicationId": "[variables('appinsights').name]",
                "Application_Type": "[variables('appinsights').type]"
            }
        },
        {
            "comments": "name has to match the plan name or get into issues - see https://github.com/Azure/azure-quickstart-templates/issues/3172",
            "type": "Microsoft.OperationsManagement/solutions",
            "name": "[variables('sqlanalytics').name]",
            "condition": "[equals(parameters('dbType'), 'sqlserver')]",
            "apiVersion": "2015-11-01-preview",
            "location": "[parameters('location')]",
            "plan": {
                "name": "[variables('sqlanalytics').name]",
                "product": "[concat('OMSGallery/', variables('solutionTypes'))]",
                "promotionCode": "",
                "publisher": "Microsoft"
            },
            "properties": {
                "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
            }
        },
        {
            "type": "Microsoft.OperationsManagement/solutions",
            "name": "[variables('gtwyanalytics').name]",
            "apiVersion": "2015-11-01-preview",
            "location": "[parameters('location')]",
            "plan": {
                "name": "[variables('gtwyanalytics').name]",
                "promotionCode": "",
                "product": "[concat('OMSGallery/', variables('gtwySolutionTypes'))]",
                "publisher": "Microsoft"
            },
            "properties": {
                "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
            }
        }
    ],
    "outputs": {
        "instrumentkey": {
            "value": "[reference(variables('appinsights').name).InstrumentationKey]",
            "type": "string"
        },
        "appInsightsName": {
            "value": "[variables('appinsights').name]",
            "type": "string"
        }
    }
}